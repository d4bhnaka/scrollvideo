{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es2019"
    ]
  },
  "include": [
    "src/index.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}